page{
    background-color: #fff;
}

.index-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 200px;
  height: 200px;
  margin-top: 80px;
}

.logo-title {
  font-size: 24px;
  font-weight: normal;
  line-height: 28px;
  margin-top: 30px;
}

.logo-text {
  font-size: 13px;
  color: #111;
  margin-top: 30px;
  font-family: "微软雅黑";
}
.index-container .btn{
    border: 1px solid #109D59;
    margin-top: 90rpx;
    padding: 5px 10px;
    border-radius: 5px;
}

.index-container .btn text{
    color: #109D59;
}