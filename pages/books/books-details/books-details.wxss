@import "../star-template/star-template.wxss";

.container{
    display:flex;
    flex-direction: column;
    font-size: 20rpx;
}

.head-img{
    width:100%;
    height: 320rpx;
    -webkit-filter:blur(10px);
}

.head-img-hover{
    width: 100%;
    height: 320rpx;
    position:absolute;
    top:0;
    left:0;
    display:flex;
    flex-direction: column;
}

.main-title{
    font-size: 19px;
    color:#fff;
    font-weight:bold;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2px;
}

.sub-title{
    font-size: 28rpx;
    color:#fff;
    margin-left: 40rpx;
    margin-top: 20rpx;
}

.like{
    display:flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-left: 40rpx;
    margin-bottom: 20rpx;
}

.highlight-font{
    font-size:22rpx;
    margin-right: 20rpx;
}

.plain-font{
    font-size:22rpx;
    width: 45%;
}


.book-img{
    height:238rpx;
    width: 175rpx;
    position: absolute;
    top:140rpx;
    right: 30rpx;
}


.flex-row{
    display:flex;
    flex-direction: row;
    margin-bottom: 10rpx;
}

.hr{
    margin-top:45rpx;
    height:1px;
    width: 100%;
    background-color: #d9d9d9;
}

.synopsis{
    margin-left:40rpx;
    display:flex;
    flex-direction: column;
    margin-top: 50rpx;
     margin-bottom: 50rpx;
}

.synopsis-font{
    color:#999;
}

.summary-content{
    margin-top: 20rpx;
    margin-right: 40rpx;
    line-height:40rpx;
    letter-spacing: 1px;
}


.score{
    margin-top:20rpx;
}

.score .star-score{
    color: #fff;
}

.score .sub-title{
    margin-top: 0px;
}